<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/elevator_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
            >

        <com.emrg.view.ImageView style="@style/ElevatorInnerImg"/>
        <com.emrg.view.ImageView style="@style/ElevatorInnerArrowUp"/>
    </RelativeLayout>

    <com.emrg.view.ImageView
            android:id="@+id/elevator_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>


    <RelativeLayout android:id="@+id/elev_doors"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:gravity="center_vertical"
            >
        <com.emrg.view.ImageView
                android:id="@+id/elevator_door_left_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                />

        <com.emrg.view.ImageView
                android:id="@+id/elevator_door_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_toRightOf="@+id/elevator_door_left_open"
                android:layout_centerVertical="true"
                />
        <com.emrg.view.ImageView
                android:id="@+id/elevator_door_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_toRightOf="@+id/elevator_door_left"
                android:layout_centerVertical="true"
                />
        <com.emrg.view.ImageView
                android:id="@+id/elevator_door_right_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/elevator_door_right"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>



</RelativeLayout>